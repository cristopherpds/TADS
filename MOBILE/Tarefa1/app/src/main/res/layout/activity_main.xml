<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="FRANCISCO VIAGEMS" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Calcule su viagem conosco." />
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="213dp"
        android:src="@drawable/logo"
        tools:srcCompat="@drawable/logo" />
    <EditText
        android:id="@+id/txtAutonomy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:hint="Autonomia do veículo (KM/L)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtDistance"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:hint="Distância da viagem (KM)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtFuelPrice"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:hint="Preço do combustível (R$/L)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:text="Calcular" />

</LinearLayout>